{
  "name": "gotham-lake-base",
  "dockerComposeFile": ["../docker-compose.yml"],
  "service": "app",
  "workspaceFolder": "/workspace",

  "remoteUser": "root",

  "containerEnv": {
    "UV_PROJECT_ENVIRONMENT": "/opt/venv",
    "UV_LINK_MODE": "copy"
  },

  "remoteEnv": {
      "PATH": "/opt/venv/bin:${containerEnv:PATH}",
      "VIRTUAL_ENV": "/opt/venv"
  },

  "postCreateCommand": "bash /workspace/.devcontainer/setup_postCreate.sh",

  "postStartCommand": "bash /workspace/.devcontainer/setup_postStart.sh",

  "postAttachCommand": "echo '[postAttach] container attached'",

  "overrideCommand": true,

  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/opt/venv/bin/python",
        "python.terminal.activateEnvironment": true
      },
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-azurestorage",
    ]
    }
  }
}